<%= form_for @pessoa, :html => { :class => "form-horizontal pessoa" } do |f| %>

  <% if @pessoa.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pessoa.errors.count, "error") %> prohibited this pessoa from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pessoa.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label :senha, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :senha, :class => 'form-control' %>
    </div>
    <%=f.error_span(:senha) %>
  </div>
  <div class="form-group">
    <%= f.label :grupo_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
          <% @grupos = Grupo.all %>
          <%= f.select(:grupo_id) do %>
            <% @grupos.each do |c| %>
              <%= content_tag(:option, c.nome, value: c.id) %>
            <% end %>
          <% end %>
    </div>
    <%=f.error_span(:grupo_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pessoas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
